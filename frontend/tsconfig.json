// frontend/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // --- ADD THESE LINES ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
    // --- END ADDED LINES ---
  },
  "include": ["src"], // Keep this as is or as Vite set it
  "references": [{ "path": "./tsconfig.node.json" }] // Keep this as is
}